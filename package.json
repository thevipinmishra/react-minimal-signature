{
  "scripts": {
    "package": "pnpm --filter react-minimal-signature",
    "docs": "pnpm --filter docs",
    "build-package": "pnpm --filter react-minimal-signature run build-package",
    "build-css": "pnpm --filter react-minimal-signature run build-css",
    "watch-package": "pnpm --filter react-minimal-signature run dev",
    "publish": "pnpm --filter react-minimal-signature run publish-build",
    "format": "biome check --write --no-errors-on-unmatched",
    "build-docs": "pnpm run build-package && pnpm --filter docs run build"
  },
  "author": "Vipin Mishra",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "lint-staged": "15.5.1",
    "simple-git-hooks": "2.12.1"
  }
}
