{
  "name": "react-minimal-signature",
  "version": "0.0.6",
  "description": "A customizable React signature pad component.",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "style": "./rmc.css",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./*": "./*"
  },
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist/**",
    "*.css",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thevipinmishra/react-signature-pad.git",
    "directory": "packages/react-minimal-signature"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "build-css": "lightningcss --minify --targets '>= 0.25%' --bundle src/index.css -o rmc.css",
    "build-package": "pnpm run build && pnpm run build-css",
    "publish-build": "pnpm run build-package && npm publish"
  },
  "keywords": [
    "signature",
    "react",
    "signature-pad"
  ],
  "author": "Vipin Mishra",
  "license": "ISC",
  "dependencies": {
    "@ark-ui/react": "^4.5.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "lightningcss": "^1.28.2",
    "lightningcss-cli": "^1.28.2",
    "tsup": "^8.3.5"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
